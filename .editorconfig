# http://editorconfig.org

# top-most EditorConfig file
root = true


# global file encoding
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# markdown files
[**.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
